<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity
        name="Sulu\Page\Domain\Model\PageDimensionContentNavigationContext"
        table="pa_page_dimension_content_navigation_contexts"
    >
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="navigationContext" type="string" column="name" length="31" />

        <many-to-one field="pageDimensionContent" target-entity="Sulu\Page\Domain\Model\PageDimensionContent" inversed-by="navigationContexts">
            <join-column name="page_dimension_content_id" referenced-column-name="id" on-delete="CASCADE" nullable="false" />
        </many-to-one>

        <indexes>
            <index name="idx_page_navigation_context" fields="navigationContext"/>
        </indexes>
    </entity>
</doctrine-mapping>
