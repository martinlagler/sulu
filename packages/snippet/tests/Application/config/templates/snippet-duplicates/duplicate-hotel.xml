<?xml version="1.0" ?>
<template xmlns="http://schemas.sulu.io/template/template"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template.xsd">

    <key>duplicate-hotel</key>

    <view>views/snippets/duplicate-hotel</view>
    <controller>Sulu\Content\UserInterface\Controller\Website\ContentController::indexAction</controller>
    <cacheLifetime>604800</cacheLifetime>

    <areas>
        <area key="hotel" cache-invalidation="true">
            <meta>
                <title lang="en">Hotel Area from Duplicate Template</title>
            </meta>
        </area>
    </areas>

    <meta>
        <title lang="en">Duplicate Hotel Template</title>
    </meta>

    <properties>
        <property name="title" type="text_line" mandatory="true">
            <meta>
                <title lang="en">Title</title>
            </meta>
        </property>
    </properties>
</template>